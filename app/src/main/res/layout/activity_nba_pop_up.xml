<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nbaPopUpActivity">

    <TextView
        android:id="@+id/titleOfGameTextView"
        android:layout_width="301dp"
        android:layout_height="19dp"
        android:gravity="center"
        android:text=""
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/homeTeamLogo"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:contentDescription="@string/home_team_logo"
        android:foregroundGravity="left"
        app:layout_constraintEnd_toStartOf="@+id/awayTeamLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleOfGameTextView" />

    <ImageView
        android:id="@+id/awayTeamLogo"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:contentDescription="@string/away_team_logo"
        android:foregroundGravity="left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/homeTeamLogo"
        app:layout_constraintTop_toBottomOf="@+id/titleOfGameTextView" />

    <TextView
        android:id="@+id/homeTeamNameTextView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="68dp"
        android:gravity="center"
        android:text="HOME NAME"
        android:textSize="15sp"
        app:flow_horizontalAlign="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeTeamLogo" />

    <TextView
        android:id="@+id/awayTeamNameTextView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="68dp"
        android:gravity="center"
        android:text="AWAY NAME"
        android:textFontWeight="@integer/material_motion_duration_long_1"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/awayTeamLogo" />

    <TextView
        android:id="@+id/homeRunScore"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeTeamNameTextView" />

    <TextView
        android:id="@+id/awayRunScore"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="52dp"
        android:gravity="center"
        android:text="138"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/awayTeamNameTextView" />

    <TextView
        android:id="@+id/runsTitleTextView"
        android:layout_width="50dp"
        android:layout_height="30dp"

        android:layout_marginTop="168dp"
        android:gravity="center"
        android:text="SCORE"
        app:layout_constraintEnd_toStartOf="@id/awayRunScore"

        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toEndOf="@id/homeRunScore"
        app:layout_constraintTop_toBottomOf="@id/titleOfGameTextView" />

    <TextView
        android:id="@+id/homeHits"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeRunScore" />

    <TextView
        android:id="@+id/awayHits"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="52dp"
        android:gravity="center"
        android:text="52"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/awayRunScore" />

    <TextView
        android:id="@+id/assistsTextView"
        android:layout_width="69dp"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="ASSISTS"
        app:layout_constraintEnd_toStartOf="@+id/awayHits"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toEndOf="@+id/homeHits"
        app:layout_constraintTop_toBottomOf="@+id/runsTitleTextView"

        />

    <TextView
        android:id="@+id/homeRebounds"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeHits" />

    <TextView
        android:id="@+id/awayRebounds"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="52dp"
        android:gravity="center"
        android:text="46"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/awayHits" />

    <TextView
        android:id="@+id/awayErrors"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="52dp"
        android:gravity="center"
        android:text="57/90 (65.3%)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/awayRebounds" />

    <TextView
        android:id="@+id/awayThreePointers"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="52dp"
        android:gravity="center"
        android:text="57/90 (65.3%)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/threePointersTextView"
        app:layout_constraintTop_toBottomOf="@+id/awayErrors" />

    <TextView
        android:id="@+id/awayFreeThrows"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="52dp"
        android:gravity="center"
        android:text="57/90 (65.3%)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.869"
        app:layout_constraintStart_toEndOf="@+id/freeThrowsTextView"
        app:layout_constraintTop_toBottomOf="@+id/awayThreePointers" />

    <TextView
        android:id="@+id/errorsTextView"
        android:layout_width="80dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="REBOUNDS"
        app:layout_constraintEnd_toStartOf="@+id/awayErrors"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toEndOf="@+id/homeErrors"
        app:layout_constraintTop_toBottomOf="@+id/assistsTextView"

        />

    <TextView
        android:id="@+id/FGsTextViews"
        android:layout_width="76dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="FEILD GOALS"
        app:layout_constraintEnd_toStartOf="@+id/awayErrors"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toEndOf="@+id/homeErrors"

        app:layout_constraintTop_toBottomOf="@+id/errorsTextView" />

    <TextView
        android:id="@+id/threePointersTextView"
        android:layout_width="94dp"
        android:layout_height="34dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="THREES"
        app:layout_constraintEnd_toStartOf="@+id/awayErrors"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toEndOf="@+id/homeErrors"

        app:layout_constraintTop_toBottomOf="@+id/errorsTextView" />

    <TextView
        android:id="@+id/freeThrowsTextView"
        android:layout_width="94dp"
        android:layout_height="34dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="FREE THROWS"
        app:layout_constraintEnd_toStartOf="@+id/awayErrors"
        app:layout_constraintHorizontal_bias="0.488"

        app:layout_constraintStart_toEndOf="@+id/homeErrors"
        app:layout_constraintTop_toBottomOf="@+id/threePointersTextView" />

    <TextView
        android:id="@+id/homeErrors"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="57/90 (65.3%)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeRebounds" />

    <TextView
        android:id="@+id/homeThreePointers"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="57/90 (65.3%)"
        app:layout_constraintEnd_toStartOf="@+id/threePointersTextView"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeErrors" />

    <TextView
        android:id="@+id/homeFreeThrows"
        android:layout_width="85dp"
        android:layout_height="45dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="57/90 (65.3%)"
        app:layout_constraintEnd_toStartOf="@+id/freeThrowsTextView"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeThreePointers" />


</androidx.constraintlayout.widget.ConstraintLayout>